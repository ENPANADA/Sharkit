---
import Logo from "@components/Logo.astro";
import { IconCaretDown, IconHome } from "@lib/Icons";
import {
  ROOT_URL,
  HOME_URL,
  COMPONENT_URL,
  HOME_BACKGROUND_URL,
} from "@config/routes";
---

<header>
  <div>
    <a href={ROOT_URL}>
      <Logo />
    </a>
    <nav>
      <a href={HOME_URL}><IconHome /></a>
      <div>
        <button>Collections <IconCaretDown /></button>
        <menu>
          <a href={COMPONENT_URL}>Components</a>
          <a href={HOME_BACKGROUND_URL}>Backgrounds</a>
        </menu>
      </div>
    </nav>
  </div>
</header>

<style>
  header {
    background: radial-gradient(
        at right top,
        transparent 5%,
        rgb(var(--accent)) 10%,
        rgb(var(--accent-dark)) 11%,
        rgb(var(--accent)) 12%,
        transparent 20%,
        rgb(var(--accent-secondary)) 25%,
        rgb(var(--accent-light)) 26%,
        rgb(var(--accent-secondary)) 27%,
        transparent 40%,
        rgb(var(--accent-dark)) 45%,
        rgb(var(--accent)) 46%,
        rgb(var(--accent-dark)) 47%,
        transparent 65%
      ),
      linear-gradient(
        165deg,
        transparent,
        rgb(var(--accent-dark)) 10%,
        rgb(var(--accent)) 11%,
        rgb(var(--accent-dark)) 12%,
        transparent 35%,
        rgb(var(--accent-secondary)) 40%,
        rgb(var(--accent-light)) 41%,
        rgb(var(--accent-secondary)) 42%,
        transparent 55%,
        rgb(var(--accent)) 60%,
        rgb(var(--accent-dark)) 61%,
        rgb(var(--accent)) 62%,
        transparent 70%
      ),
      rgb(var(--bg-dark));
    border-bottom-left-radius: 18px;
    border-bottom-right-radius: 18px;
    box-shadow: 0 0 0px 1px rgb(var(--accent-light));
    position: relative;
    transition: opacity 0.5s;
    z-index: 1;

    &::after {
      content: "";
      position: absolute;
      inset: 0;
      border-radius: inherit;
      background-color: rgb(var(--bg-dark) / 30%);
      backdrop-filter: blur(1px);
      z-index: -1;
    }
  }

  header > div {
    max-width: var(--max-width-content);
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 22px 25px;
    margin-inline: auto;
  }

  a,
  button {
    color: inherit;
    text-decoration: none;
    border: 0;
  }

  nav {
    display: inline-flex;
    gap: 10px;

    div {
      position: relative;
      --height-align: 5px;

      &::before {
        visibility: hidden;
        content: "";
        position: absolute;
        bottom: calc(-1 * var(--height-align));
        left: 50%;
        translate: -50%;
        border: var(--height-align) solid transparent;
        border-bottom-color: rgb(var(--accent-light));
        transition: visibility 1s;
      }
    }

    & > a,
    button {
      font-weight: 300;
      padding: 5px 15px;
      border-radius: 5px;
      background-color: rgb(var(--bg-dark) / 60%);
      height: 100%;
    }

    button {
      display: inline-flex;
      align-items: center;
      gap: 5px;

      svg {
        transition: rotate 0.2s;
      }
    }
  }

  menu {
    visibility: hidden;
    margin: 0;
    padding: 10px;
    position: absolute;
    top: calc(100% + var(--height-align));
    right: 0;
    display: flex;
    flex-direction: column;
    gap: 5px;
    background-color: rgb(var(--bg-dark));
    box-shadow: inset 0 0 0 1px rgb(var(--accent-light));
    border-radius: 10px;
    transition: visibility 1s;

    a {
      padding: 5px 10px;
      letter-spacing: 1px;
      font-weight: 300;
      border-radius: 5px;
      border: 2px solid rgb(var(--accent-dark));
      background-color: rgb(var(--bg));
      position: relative;
      z-index: 1;

      &::before {
        content: "";
        position: absolute;
        inset: 0;
        right: 100%;
        border-radius: inherit;
        background-color: rgb(var(--accent-secondary));
        z-index: -1;
        transition: inset 0.8s;
      }

      &:hover::before {
        right: 0;
        transition: inset 0.15s;
      }
    }
  }

  nav > a:hover,
  nav:has(menu:hover) button,
  nav button:hover {
    background-color: rgb(var(--bg-dark) / 80%);
    box-shadow: inset 0 0 0px 1px rgb(var(--accent-light));
  }

  div > a:hover {
    svg {
      background-color: rgb(var(--bg-dark) / 80%);
      box-shadow: inset 0 0 0px 1px rgb(var(--accent-light));
    }
  }

  div:has(button:hover),
  div:has(menu:hover) {
    &::before,
    menu {
      visibility: visible;
    }

    button svg {
      rotate: -0.25turn;
    }
  }
</style>
