---
import type { Component } from "@type/collection";
import { HOME_COMPONENT_URL, COMPONENT_URL } from "@config/routes";
import { IconArrowLeft, IconArrowRight, IconHome } from "@lib/Icons";

interface Props {
  previous?: Component | undefined;
  next?: Component | undefined;
}

const { previous, next } = Astro.props;
---

<nav>
  {
    previous ? (
      <a href={COMPONENT_URL + previous.link}>
        <span>
          <IconArrowLeft />
          Previous
        </span>
        {`${previous.group}: ${previous.tittle}`}
      </a>
    ) : (
      <a href={HOME_COMPONENT_URL}>
        <span>
          <IconHome />
          Back to
        </span>
        Home
      </a>
    )
  }
  {
    next ? (
      <a href={COMPONENT_URL + next.link}>
        <span>
          Next
          <IconArrowRight />
        </span>
        {`${next.group}: ${next.tittle}`}
      </a>
    ) : (
      <a href={HOME_COMPONENT_URL}>
        <span>
          Back to
          <IconHome />
        </span>
        Home
      </a>
    )
  }
</nav>

<style>
  nav {
    width: 100%;
    display: flex;
    gap: 15px;
    box-sizing: border-box;
  }

  a {
    flex-grow: 1;
    padding: 5px 25px;
    text-decoration: none;
    background: var(--gradient-linear);
    color: rgb(var(--accent-light));
    border: 1px solid rgb(var(--accent));
    border-radius: 10px;
    background-size: 200% 100%;
    display: inline-flex;
    flex-direction: column;
    font-size: 18px;
    color: inherit;
    font-weight: bold;
    box-shadow: rgb(var(--bg-dark)) 6px 6px 6px;
    transition: border-color 0.3s;
    animation: translate-background 5s linear infinite;

    &:last-of-type {
      text-align: end;
      align-items: flex-end;
      animation-direction: reverse;
    }

    &:hover {
      border-color: rgb(var(--accent-light));
    }

    span {
      font-size: 14px;
      font-weight: normal;
      color: rgb(var(--accent-light));
      display: inline-flex;
      align-items: center;
      gap: 10px;
    }
  }

  @keyframes translate-background {
    100% {
      background-position: 200% 0%;
    }
  }
</style>
