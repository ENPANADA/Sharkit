---
import { IconHome } from "@lib/Icons";
import { HOME_URL } from "@config/routes";
---

<footer>
  <a href={HOME_URL}><IconHome />Back to Home</a>
</footer>

<style>
  footer {
    margin-top: 10vh;
    padding: 60px 10px;
    display: flex;
    flex-direction:column;
    align-items: center;
  }

  a {
      text-decoration: none;
      padding: 8px 15px;
      border: solid 1px rgb(var(--accent-light));
      font-size: 15px;
      color: inherit;
      cursor: pointer;
      user-select: none;
      letter-spacing: 1px;
      border-radius: 12px;
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background-image: var(--gradient-linear);
      background-size: 200% 100%;
      transition: border-color 0.1s ease-in;

      &:hover{
        border-color: rgb(var(--accent));
      }
    }
</style>
