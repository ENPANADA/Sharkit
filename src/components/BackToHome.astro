        animation: draw-arrow 1.5s forwards 3.8s;
      }*/

      &::before {
        content: "";
        position: absolute;
        inset: 0;
        z-index: -1;
        border-radius: inherit;
        background-image: var(--gradient-linear-2);
        background-size: 200% 100%;
        filter: blur(8px);
