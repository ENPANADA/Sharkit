---
import { HOME_URL } from "@config/routes";
import { IconHome, IconHeartEmpty, IconMexicoFlag } from "@lib/Icons";
import { COLORS } from "@config/global";
---

<footer>
  <p>
    Made with <IconHeartEmpty color={COLORS.accentLight} strokeWidth="20px" /> from
    <IconMexicoFlag />
  </p>
  <a href={HOME_URL}><IconHome />Back to Home</a>
</footer>

<style>
  footer {
    margin-block: 40px 80px;
    padding: 60px 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 50px;
  }

  a {
    position: relative;
    text-decoration: none;
    padding: 10px 25px;
    border: solid 3px rgb(var(--accent-light));
    font-size: 15px;
    color: inherit;
    cursor: pointer;
    user-select: none;
    letter-spacing: 1px;
    border-radius: 25px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background-image: var(--lg2);
    background-size: 200% 100%;
    box-shadow: inset 0 40px rgb(0 0 0 / 40%);
    transition: background-position 0.2s linear;

    &:hover {
      background-position: 100%;
    }
  }

  p {
    display: inline-flex;
    gap: 5px;
    align-items: center;
  }
</style>
