---
import { IconDorsalLogo } from "@lib/Icons";
---

<div>
  <IconDorsalLogo />
  <h2>Shar<span>kit</span></h2>
</div>

<style>
  div {
    width: min-content;
    position: relative;
  }

  h2 {
    font-family: "Archivo Black", system-ui, sans-serif;
    font-size: 21px;
    letter-spacing: -1px;
    transform: skewX(-20deg);
    margin: 0;
  }

  span {
    color: transparent;
    background: var(--lg7);
    background-clip: text;
  }

  svg {
    position: absolute;
    height: 50px;
    top: -50%;
    left: -12px;
    padding: 5px 10px;
    border-radius: 16px 10px;
    overflow: visible;

    path:first-of-type {
      filter: drop-shadow(0 0 10px rgb(var(--accent-light)));
    }
    path:last-of-type {
      filter: drop-shadow(2px 2px 10px rgb(var(--bg-dark)));
    }
  }
</style>
